<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:id="@+id/detail_delivery"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_delivery"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            android:layout_weight="1">
        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/card_view_shadow_start_color"
            android:layout_height="@dimen/text_height"
            android:visibility="gone"
            tools:ignore="PrivateResource">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:text="@string/text_view_order_title"
                android:textSize="@dimen/order_number_text_size"
                android:textColor="@android:color/black"
                android:layout_marginStart="@dimen/list_view_orders_spacing"
                />

            <TextView
                android:id="@+id/total_quantity_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginStart="@dimen/list_view_orders_spacing"
                android:textSize="@dimen/order_number_text_size"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/total_price_delivery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center|start"
                android:gravity="start"
                android:layout_marginEnd="@dimen/list_view_orders_spacing"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="@dimen/order_number_text_size"
                />

        </LinearLayout>

        <Button
            android:id="@+id/action_delivery_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_green_no_radius"
            android:text="GIAO TẤT CẢ"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="@android:color/white"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</layout>

